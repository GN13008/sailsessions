<div class="home-banner">
      <div class="container pl-4">
        <div class="img-container">
          <%= image_tag 'logo-sail-sessions.png', class: "logo-hp" %>
        </div>
        <div class="content-container">
          <h1>SailSessions</h1>
          <h3>Partagez plus que votre passion</h3>
          <h3>pour les sports nautiques</h3>
          <div class="banner-CTA">
            <h3><a class="btn btn-flat background-accent-color" href="/rides/new">Créer sa session</a></h3>
          </div>
        </div>
    </div>
</div>
  <!-- Search Form  -->
<div class="container">
  <h2 class="pt-3 view-headline text-center">Cherche une session de sport nautique près de chez toi!</h2>
    <div class="search-form-control form-group form-inline center-search">
      <%= form_with url: "/search", method: :get, local: true do |form| %>
        <%= form.text_field :sport, placeholder: "Choisis ton sport", class: "form-control little-margin-bottom" %>
        <%= form.text_field :depart, placeholder: "Tu pars d'ou ?", class: "form-control little-margin-bottom" %>
        <%= form.date_field :date, placeholder: "Quand ?", class: "form-control little-margin-bottom" %>
       <h3><%= form.submit "Trouver une session", class: "btn btn-flat-search background-accent-color" %></h3>
      <% end %>
    </div>
  <h2 class="pt-3 view-headline">Ta session par sport</h2>
<!-- Carroussel Images -->
    <section class="carousel">
        <ul class="carousel-items">
            <% @sports.each do |sport| %>
              <a href="/search?sport=<%= sport.name %>&depart=&date=&commit=Trouve+ta+session">
                <div class="card-sport-home">
                    <h1><%= sport.name %></h1>
                  <li class="carousel-item"></li>
                </div>
              </a>
            <% end %>
        </ul>
    </section>



  <h2 class="pt-3 view-headline">Top session</h2>
  <div class="cards-sessions">
    <% @rides.each do |ride| %>
      <%= link_to ride_path(ride) do %>
        <div class="card-session">
          <div class="card-session-colum">
              <h3><%= ride.title %></h3>
              <p><%= ride.nb_of_place %></p>
              <p><%= ride.spot %></p>
          </div>
          <div class="card-session-colum  right">
              <img class="profile-pic" src="https://img.freepik.com/vecteurs-libre/homme-affaires-caractere-avatar-isole_24877-60111.jpg?size=338&ext=jpg" alt="profile">
              <p><%= ride.date %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
