<a href="javascript:history.back()" class="position-top-left">
    <%= image_tag "outline_arrow_back_ios_black_24dp.png" %>
</a>
<div class="container-de-pierre-le-plus-beau">
  <div class="container-edit-profile">
    <div class="avatar-edit-profile">
      <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, class: "avatar-profil-user" %>
      <% else %>
        <%= image_tag 'logo-sail-sessions.png', class: "avatar-profil-user" %>
      <% end %>
    </div>
    <div >
      <h1><%=current_user.name%></h1>
      <h2><%=current_user.age%></h2>
      <div class="social-mt-5">
        <a href="#"><i class="fab fa-github"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
        <a href="#"><i class="fab fa-facebook"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-linkedin"></i></a>
      </div>
    </div>


  </div>

  <hr class=hr-color>
  <div>

  </div>

<div class="container">

  <h2>Edit <%= resource_name.to_s.humanize %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input :name,
                  hint: "laissez-le vide si vous ne voulez pas le changer",
                  required: false,
                  input_html: { autocomplete: "nouveau-nom" } %>
      <%= f.input :age,
                  hint: "laissez-le vide si vous ne voulez pas le changer",
                  required: false,

                  input_html: { autocomplete: "nouvelle-age" } %> 

      <%= f.input :bio,
                  hint: "laissez-le vide si vous ne voulez pas le changer",
                  required: false,

                  input_html: { autocomplete: "nouvelle-bio" } %>                  
                 


      <%= f.input :password,
                  hint: "laissez-le vide si vous ne voulez pas le changer",
                  required: false,
                  input_html: { autocomplete: "nouveau-mot de passe" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "nouveau-mot de passe" } %>
      <%= f.input :current_password,
                  hint: "nous avons besoin de votre mot de passe actuel pour confirmer vos modifications",
                  required: true,
                  input_html: { autocomplete: "Mot de passe actuel" } %>
    </div>

    <div class="form-actions">



      <%= f.button :submit, "Mettre a jour", class:"btn btn-flat background-accent-color big-btn link-to-h3" %>

    </div>
  <% end %>
<div class="notre-container btn-container">
  <%= link_to "Supprimer", registration_path(resource_name), class:"btn btn-flat background-secondary-color" , data: { confirm: "Are you sure?" }, method: :delete %>

  <%= link_to "Deconnexion" , destroy_user_session_path, method: :delete, class:"btn btn-flat background-secondary-color"  %>
</div>

</div>
